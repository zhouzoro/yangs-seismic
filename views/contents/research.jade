extends ../layout
block content
	.custom-container.container-fluid
		h2
			span.title-icon #
			span Research
		if research && research[0]
			each rsh, index in research
				.research.col-xs-6.col-sm-4.col-md-3
					.title
						h2.header(href='/research?_id=' + rsh._id)= rsh.title
					.content
						if rsh.cover
							.image(href='/research?_id=' + rsh._id)
								img(src=rsh.cover)
						p.description= rsh.quote
							.arrow
								.stick
								.point
								.wall
		if editmode
			.research.col-xs-6.col-sm-4.col-md-3.edit-add
				.card-box
					.add-btn(data-url='/add_research'  data-type='research')
						i.fa.fa-plus-square